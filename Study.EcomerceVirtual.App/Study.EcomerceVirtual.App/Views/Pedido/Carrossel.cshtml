@model List<Produto>

@{
    const int TAMANHO_PAGINA = 4;
    var paginas = (int)Math.Ceiling((double)Model.Count / TAMANHO_PAGINA);
}

<h3>Catálogo</h3>

<div id="my-carousel" class="carousel slide" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        @for (int pagina = 0; pagina < paginas; pagina++)
        {
        <div class="item @(pagina == 0 ? "active" : "")">
            @{
                var listaProdutos = Model.Skip(pagina * TAMANHO_PAGINA).Take(TAMANHO_PAGINA);
            }
            <div class="row">
                @foreach (var prod in listaProdutos)
                {
                    <div class="col-md-3 col-sm-3 col-lg-3">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <img class="img-produto-carrossel" src="/images/produtos/large_@(prod.Codigo).jpg" />
                            </div>
                            <div class="panel-footer produto-footer">
                                <div class="produto-nome">@prod.Nome</div>
                                <div><h4><strong>R$ @prod.Preco</strong></h4></div>
                                <div class="text-center">
                                    <a href="/" class="btn btn-success">Adicionar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        }
        <div class="item ">
            <div class="row">
                <div class="col-md-3 col-sm-3 col-lg-3">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <img class="img-produto-carrossel" src="/images/produtos/large_038.jpg" />
                        </div>
                        <div class="panel-footer produto-footer">
                            <div class="produto-nome">gest&#xE3;o de produtos</div>
                            <div><h4><strong>R$ 69,90</strong></h4></div>
                            <div class="text-center">
                                <a href="/" class="btn btn-success">Adicionar</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-3 col-lg-3">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <img class="img-produto-carrossel" src="/images/produtos/large_039.jpg" />
                        </div>
                        <div class="panel-footer produto-footer">
                            <div class="produto-nome">Algoritmos em Java</div>
                            <div><h4><strong>R$ 69,90</strong></h4></div>
                            <div class="text-center">
                                <a href="/" class="btn btn-success">Adicionar</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-3 col-lg-3">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <img class="img-produto-carrossel" src="/images/produtos/large_040.jpg" />
                        </div>
                        <div class="panel-footer produto-footer">
                            <div class="produto-nome">Xamarin Forms</div>
                            <div><h4><strong>R$ 69,90</strong></h4></div>
                            <div class="text-center">
                                <a href="/" class="btn btn-success">Adicionar</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-3 col-lg-3">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <img class="img-produto-carrossel" src="/images/produtos/large_041.jpg" />
                        </div>
                        <div class="panel-footer produto-footer">
                            <div class="produto-nome">Big Data</div>
                            <div><h4><strong>R$ 69,90</strong></h4></div>
                            <div class="text-center">
                                <a href="/" class="btn btn-success">Adicionar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#my-carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#my-carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>